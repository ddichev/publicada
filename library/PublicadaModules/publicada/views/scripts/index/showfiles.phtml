<h2>Files in your site</h2>
<table class="table table-striped">
  <?php foreach ($this->files as $file) { ?>
    <tr>
      <td><?= $file['name']; ?></td>
      <td class="buttons"><a href="<?= $this->baseUrl() . 'file/' . $file['name']; ?>">Download</a></td>
      <td class="buttons"><a href="<?= $this->baseUrl() . 'file/' . $file['name']; ?>" class="link_url">Get link
