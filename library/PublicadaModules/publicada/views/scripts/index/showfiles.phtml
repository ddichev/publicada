    </tr>
  <?php } ?>
</table>
<script type="text/javascript">
  window.addEvent('domready', function () {
    $$('.link_url').each(function (linkUrl) {
      linkUrl.addEvent('click', function (ev) {
        prompt("Please copy the following address:                           \n(You can paste it later elsewhere)", this.href);
        return false;
      });
    });
  });
</script>