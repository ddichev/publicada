<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="span12">
        &copy; Publicada |
        <?php
        $configuration = Zend_Registry::get('configuration');
        foreach ($configuration['languages'] as $key => $language) : ?>
          <?php if (Zend_Registry::get('current_user_locale') == $language) : ?>
            <span class="active"><a href="#"><?php echo $this->translate($language); ?></a></span>
          <?php else : ?>
            <span><a
                href="<?php echo $this->url(array('module' => 'publicada', 'controller' => 'index', 'action' => 'index', 'lang' => $language, 'cl' => Zend_Registry::get('content_locale')), null, true); ?>"
                title="<?php echo $this->translate($language); ?>"><?php echo $this->translate($language); ?></a></span>
          <?php endif; ?>
        <?php endforeach; ?>
      </div>
    </div>
  </div>
</footer>
