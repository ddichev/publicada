<ul class="nav">
  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#"><?php echo $this->translate('content.locale'); ?> <b
        class="caret"></b></a>
    <ul class="dropdown-menu">
      <?php
      $configuration = Zend_Registry::get('configuration');
      foreach ($configuration['languages'] as $key => $language) :
        ?>
        <?php if (Zend_Registry::get('content_locale') == $language) : ?>
        <li class="active"><a href="#"><?php echo $this->translate($language); ?></a></li>
      <?php else : ?>
        <li>
          <a
            href="<?php echo $this->url(array('module' => 'publicada', 'controller' => 'index', 'action' => 'index', 'cl' => $language, 'lang' => Zend_Registry::get('current_user_locale')), null, true); ?>"
            title="<?php echo $this->translate($language); ?>"><?php echo $this->translate($language); ?></a>
        </li>
      <?php endif; ?>
      <?php
      endforeach;
      ?>
    </ul>
  </li>
</ul>
