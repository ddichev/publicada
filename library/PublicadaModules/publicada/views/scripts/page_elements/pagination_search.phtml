<?php if ($this->pageCount): ?>
  <div class="pagination">
    <?php if (isset($this->previous)): ?>
      <a
        href="<?php echo $this->url(array(), 'search'); ?>?q=<?php echo Zend_Controller_Front::getInstance()->getRequest()->getParam('q') ?>&amp;page=<?php echo $this->previous; ?>"
        rel="previous">&larr;</a> |
    <?php else: ?> <span class="disabled">&larr;</span>
      |<?php endif; ?>
    <?php foreach ($this->pagesInRange as $page): ?>
      <?php if ($page != $this->current): ?>
        <a
          href="<?php echo $this->url(array(), 'search'); ?>?q=<?php echo Zend_Controller_Front::getInstance()->getRequest()->getParam('q') ?>&amp;page=<?php echo $page; ?>"><?php echo $page; ?></a>
        | <?php else: ?> <?php echo $page; ?> |
      <?php endif; ?>
    <?php endforeach; ?>
    <?php if (isset($this->next)): ?>
    <a
      href="<?php echo $this->url(array(), 'search'); ?>?q=<?php echo Zend_Controller_Front::getInstance()->getRequest()->getParam('q') ?>&amp;page=<?php echo $this->next; ?>"
      rel="next">&rarr;</a><?php else: ?><span class="disabled">&rarr;</span>
    <?php endif; ?>
  </div>
<?php endif; ?>

